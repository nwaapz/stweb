# Startech E-commerce - Prevent WordPress Interference

# Prevent WordPress from intercepting this directory
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /st_new_web/
RewriteRule ^(.*)$ - [L]
</IfModule>

# Set default index files
DirectoryIndex index.html index2.html

# Prevent directory listing
Options -Indexes

# Allow access to web files
<FilesMatch "\.(html|htm|css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot|json|xml|pdf)$">
    Require all granted
</FilesMatch>

# Security: Block access to sensitive files
<FilesMatch "^(\.git|\.htaccess|\.env|\.gitignore|\.cpanel\.yml|\.FullName)$">
    Require all denied
</FilesMatch>

# Security: Block access to development files
<FilesMatch "\.(py|ps1|bat|md|log|bak|backup|tmp)$">
    Require all denied
</FilesMatch>

# Set UTF-8 encoding
AddDefaultCharset UTF-8
